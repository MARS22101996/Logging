@using System.Threading.Tasks
@using AuthClient.ViewModels.AccountViewModel
@model AuthClient.ViewModels.AccountViewModel.LoginViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Login";
}

<div class="row">
		<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<form asp-controller="Account" class="login form-horizontal" asp-action="Login" method="post">
				<h2>Login to enter the system</h2>
				<hr />
				<div class="form-group col-xs-12">
					<label asp-for="Email" class="control-label"></label>
					<input asp-for="Email" placeholder="Enter email" class="form-control btn-block" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group col-xs-12">
					<label asp-for="Password" class="control-label"></label>
					<input asp-for="Password" placeholder="Enter password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<br />
					<button type="submit" class="btn btn-primary btn-lg btn-block text-center">Login</button>
				</div>
			</form>
		</div>
	</div>

